import random

def play_game():
    """
    –†–µ–∞–ª—ñ–∑—É—î —Å–µ—Ä—ñ—é –∑ —Ç—Ä—å–æ—Ö —ñ–≥–æ—Ä "–ö–∞–º—ñ–Ω—å, –Ω–æ–∂–∏—Ü—ñ, –ø–∞–ø—ñ—Ä" —Ç–∞ –≤–∏–≤–æ–¥–∏—Ç—å —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É.
    """
    choices = ['–∫–∞–º—ñ–Ω—å', '–Ω–æ–∂–∏—Ü—ñ', '–ø–∞–ø—ñ—Ä']
    
    # –°–ª–æ–≤–Ω–∏–∫ –¥–ª—è –≤–∏–∑–Ω–∞—á–µ–Ω–Ω—è –ø–µ—Ä–µ–º–æ–∂—Ü—è
    # –ö–ª—é—á: –≤–∏–±—ñ—Ä –≥—Ä–∞–≤—Ü—è, –ó–Ω–∞—á–µ–Ω–Ω—è: –≤–∏–±—ñ—Ä, —è–∫–∏–π –≤–∏–≥—Ä–∞—î —É —Ü—å–æ–≥–æ –≥—Ä–∞–≤—Ü—è
    winning_rules = {
        '–∫–∞–º—ñ–Ω—å': '–Ω–æ–∂–∏—Ü—ñ',
        '–Ω–æ–∂–∏—Ü—ñ': '–ø–∞–ø—ñ—Ä',
        '–ø–∞–ø—ñ—Ä': '–∫–∞–º—ñ–Ω—å'
    }
    
    # –õ—ñ—á–∏–ª—å–Ω–∏–∫–∏ –≤–∏–≥—Ä–∞—à—ñ–≤
    player_wins = 0
    computer_wins = 0
    rounds_to_play = 3
    
    print("--- –ü–æ—á–∏–Ω–∞—î–º–æ —Å–µ—Ä—ñ—é –∑ 3 —ñ–≥–æ—Ä '–ö–∞–º—ñ–Ω—å, –ù–æ–∂–∏—Ü—ñ, –ü–∞–ø—ñ—Ä'! ---")
    
    for round_num in range(1, rounds_to_play + 1):
        print(f"\n===== –†–ê–£–ù–î {round_num} =====")
        
        # –í–≤—ñ–¥ –≤—ñ–¥ –∫–æ—Ä–∏—Å—Ç—É–≤–∞—á–∞
        while True:
            player_choice = input("–í–∞—à –≤–∏–±—ñ—Ä (–∫–∞–º—ñ–Ω—å, –Ω–æ–∂–∏—Ü—ñ, –ø–∞–ø—ñ—Ä): ").lower()
            if player_choice in choices:
                break
            else:
                print("–ù–µ–∫–æ—Ä–µ–∫—Ç–Ω–∏–π –≤–≤—ñ–¥. –°–ø—Ä–æ–±—É–π—Ç–µ —â–µ —Ä–∞–∑.")
        
        # –í–∏–±—ñ—Ä –∫–æ–º–ø'—é—Ç–µ—Ä–∞
        computer_choice = random.choice(choices)
        print(f"–ö–æ–º–ø'—é—Ç–µ—Ä –≤–∏–±—Ä–∞–≤: {computer_choice}")
        
        # –í–∏–∑–Ω–∞—á–µ–Ω–Ω—è —Ä–µ–∑—É–ª—å—Ç–∞—Ç—É
        if player_choice == computer_choice:
            print("–ù—ñ—á–∏—è!")
        elif winning_rules[player_choice] == computer_choice:
            print("–í–∏ –≤–∏–≥—Ä–∞–ª–∏ —Ä–∞—É–Ω–¥!")
            player_wins += 1
        else:
            print("–ö–æ–º–ø'—é—Ç–µ—Ä –≤–∏–≥—Ä–∞–≤ —Ä–∞—É–Ω–¥.")
            computer_wins += 1

    # –§—ñ–Ω–∞–ª—å–Ω–∞ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞
    print("\n" + "="*30)
    print("      üèÜ –§–Ü–ù–ê–õ–¨–ù–ê –°–¢–ê–¢–ò–°–¢–ò–ö–ê üèÜ")
    print("="*30)
    print(f"–í–∏–≥—Ä–∞—à—ñ –õ—é–¥–∏–Ω–∏:    {player_wins}")
    print(f"–í–∏–≥—Ä–∞—à—ñ –ú–∞—à–∏–Ω–∏:    {computer_wins}")
    print("="*30)

    # –í–∏–∑–Ω–∞—á–µ–Ω–Ω—è –∑–∞–≥–∞–ª—å–Ω–æ–≥–æ –ø–µ—Ä–µ–º–æ–∂—Ü—è —Å–µ—Ä—ñ—ó
    if player_wins > computer_wins:
        print("üéâ –í–Ü–¢–ê–Ñ–ú–û! –í–∏ –≤–∏–≥—Ä–∞–ª–∏ —Å–µ—Ä—ñ—é!")
    elif computer_wins > player_wins:
        print("ü§ñ –ú–∞—à–∏–Ω–∞ –≤–∏–≥—Ä–∞–ª–∞ —Å–µ—Ä—ñ—é. –°–ø—Ä–æ–±—É–π—Ç–µ —â–µ —Ä–∞–∑!")
    else:
        print("ü§ù –°–µ—Ä—ñ—è –∑–∞–≤–µ—Ä—à–∏–ª–∞—Å—è –Ω—ñ—á–∏—î—é!")

# –ó–∞–ø—É—Å–∫ –≥—Ä–∏
if __name__ == "__main__":
    play_game()
